@page "{Id:int}"
@model FirstProject.Pages.Customers.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h1>Editin @Model.Customer.Id</h1>

<form method="post">
	<input type="hidden" asp-for="Customer.Id" />
	<div class="form-group">
		<label asp-for="Customer.FirstName"></label>
		<input class="form-control" asp-for="Customer.FirstName" />
	</div>
	<div class="form-group">
		<label asp-for="Customer.LastName"></label>
		<input class="form-control" asp-for="Customer.LastName" />
	</div>
	<div class="form-group">
		<label asp-for="Customer.City"></label>
		<input class="form-control" asp-for="Customer.City" />
	</div>
	<div class="form-group">
		<label asp-for="Customer.Country"></label>
		<input class="form-control" asp-for="Customer.Country" />
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
</form>
<a asp-page="./CustomerPage" class="btn btn-primary">Back to restaurants</a>


