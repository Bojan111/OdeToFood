
@model FirstProject.Models.RestaurantsIndexViewModel
@{
	ViewData["Title"] = "List";
}


<form method="get">
	<div class="form-group">
		<div class="input-group mb-3">
			<input type="search" class="form-control" placeholder="searchform" asp-for="SearchTerm">
			<div class="input-group-append">
				<button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
			</div>
		</div>
	</div>
</form>


<h1>Restaurants MVC List</h1>
<div>
	@Model.Message
</div>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Location</th>
			<th>Culsine</th>
		</tr>
	</thead>
	@foreach (var item in Model.Restoraunts)
	{

		<tr>
			<td>@item.Name</td>


			<td>@item.Location</td>


			<td>@item.Culsine</td>
			<td>
				<a class="btn btn-primary" asp-action="Detail" asp-route-Id="@item.Id"><i class="fas fa-search"></i></a>
				<a class="btn btn-primary" asp-action="Edit" asp-route-Id="@item.Id"><i class="fas fa-edit"></i></a>
				<a class="btn btn-primary" asp-action="Delete" asp-route-Id="@item.Id"><i class="fas fa-trash"></i></a>

			</td>

		</tr>
	}
</table>
<a class="btn btn-success" asp-controller="RestaurantsMvc" asp-action="Edit">Add Restaurants</a>

@section footer {
	<div>
		@Model.Message
	</div>
}
